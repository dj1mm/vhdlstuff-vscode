{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "type": "shell",
            "command": "yarn compile",
            "group": "build",
            "presentation": {
                "panel": "dedicated",
                "reveal": "always"
            },
            "problemMatcher": [ "$tsc" ]
        },
        {
            "label": "Watch",
            "type": "shell",
            "command": "yarn watch",
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "dedicated",
                "reveal": "never"
            },
            "problemMatcher": [ "$tsc-watch" ]
        }
    ]
}