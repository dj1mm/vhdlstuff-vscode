{
    "name": "monika-vscode",
    "displayName": "Monika vscode",
    "description": "Monika vscode client",
    "categories": [],
    "engines": {
        "vscode": "^1.43.0"
    },
    "activationEvents": [
        "onLanguage:vhdl"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "monika.server": {
                    "scope": "machine",
                    "type": "string",
                    "default": "",
                    "description": "Path to monika executable"
                },
                "monika.scratchpad": {
                    "scope": "machine-overridable",
                    "type": "string",
                    "default": "",
                    "description": "Monika will use this to dump temporary things."
                },
				"monika.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Trace the communication between VS Code and monika."
				}
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && yarn && cd .."
    },
    "devDependencies": {
        "@types/node": "^12.12.0",
        "typescript": "^3.9.4"
    },
    "version": "1.0.0",
    "license": "MIT"
}
